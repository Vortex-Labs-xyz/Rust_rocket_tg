#!/usr/bin/env bash

# Load environment variables from .env file
dotenv .env

# Activate Python virtual environment if it exists
if [[ -d ".venv" ]]; then
    source .venv/bin/activate
    echo "ğŸ Python virtual environment activated"
fi

# Export PATH for local development
export PATH="./scripts:$PATH"

# Set project root
export PROJECT_ROOT="$(pwd)"

# Display loaded environment info
echo "ğŸš€ Rust Rocket Telegram environment loaded"
echo "ğŸ“ Project root: $PROJECT_ROOT"

# Check if required environment variables are set
required_vars=("API_ID" "API_HASH" "PHONE" "CHANNEL")
missing_vars=()

for var in "${required_vars[@]}"; do
    if [[ -z "${!var}" ]]; then
        missing_vars+=("$var")
    fi
done

if [[ ${#missing_vars[@]} -gt 0 ]]; then
    echo "âš ï¸  Missing required environment variables: ${missing_vars[*]}"
    echo "ğŸ“ Please update your .env file with these values"
else
    echo "âœ… All required environment variables are set"
fi 